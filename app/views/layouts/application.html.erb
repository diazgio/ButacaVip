<!DOCTYPE html>
<html>
  <head>
    <title>ButacaVip</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class='back-ground'>
    <%= flash_message %>
    <nav class='navbar navbar-dark bg-purple'>
      <div>
        <img src="/../../../assets/images/logo1.png" alt="butacalogo">
        <%= link_to 'Butaca Vip', root_path, class:'logo-butaca text-warning'%>
      </div>
      <div class='d-flex justify-content-between aling-center'>
        <% if current_user %>
          <%= link_to current_user.name, user_path(current_user.id), class: 'bg-light text-dark p-2 border rounded' %>.
          <%= link_to 'New Event', new_event_path,  class: 'btn btn-warning mx-3 text-dark' %>
          <%= link_to "Log Out", logout_path, class: 'btn btn-dark' %>
        <% else %>
          <%= link_to "Sign Up", signup_path, class: 'btn btn-dark' %> or
          <%= link_to "Log In", login_path, class: 'btn btn-dark' %>
        <% end %>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
