<div class='container my-2'>
  <div class='row bg-purple border border-warning rounded-lg'>
    <div class='col-12 d-flex justify-content-center'>
      <h1 class='text-warning'>Â¡Our Butackeros Vip!</h1>
    </div>
  </div>

  <div class='row bg-purple border border-warning rounded-lg'>
    <div class='col-4 text-center'>
      <h3 class='text-warning'>Name</h3>
    </div>
    <div class='col-4 text-center'>
      <h3 class='text-warning'>Email</h3>
    </div>
    <div class='col-4 text-center'>
      <h3 class='text-warning'>Profile</h3>
    </div>
  </div>
  <div class='row bg-light border border-warning rounded-lg'>
    <% @users.each do |user| %>
      <div class='col-4 text-center border-bottom border-right border-warning p-2'>
        <p class='font-weight-bolder'>
          <%= user.name %>
        </p>
      </div>
      <div class='col-4 text-center border-bottom border-right border-warning p-2'>
        <%= user.email %>
      </div>
      <div class='col-4 text-center border-bottom border-warning p-2'>
        <% if user_logged? %>
          <%= link_to 'Show', user, class:'btn btn-warning p-2' %>
        <% else %>
          <%= link_to 'Log In to Visit', login_path, class: 'btn btn-dark p-2'%>
        <% end%>
      </div>
    <% end %>
  </div>
  <div class='row'>
    <div class='col-12 text-center my-2'>
      <%= link_to 'EVENTS', root_path, class:'btn bg-purple text-warning p-2 font-weight-bolder event' %>
    </div>
  </div>
</div>
