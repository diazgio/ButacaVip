<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>

<h2>Your Events</h2>

<% @event.each do |event| %>
  <div>
    <%= event.location %>
    <%= event.description %>
  </div>
<% end %>

<% @user.attended_events.each do |attended| %>
  <%= attended.name %>
<% end %>