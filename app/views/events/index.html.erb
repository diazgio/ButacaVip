      </div>
      <div class='d-flex justify-content-center align-items-center col-2 border border-warning bg-purple'>
        <h3 class='text-white'>Do U Wanna join?</h3>
      </div>
    </div>
    <% @events.each do |event| %>
      <div class='row border border-warning rounded-lg bg-light'>
        <div class='d-flex justify-content-center align-items-center col-2 border border-warning p-2'>
          <%= event.artist %>
        </div>
